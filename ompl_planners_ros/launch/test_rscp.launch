<?xml version="1.0"?>
<launch>

  <param name="use_sim_time" value="false"/>
  <!-- Arguments -->
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />
  <arg name="cliffmap" value="$(find cliff_planners)/cliffmaps/map1a.xml"/>
  
  <!-- Parameters -->
  <rosparam file="$(find ompl_planners_ros)/param/down_the_cliff_params.yaml" command="load"/>
  
  <!-- Nodes -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find smp_ros)/maps/1world.yaml"/>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find ompl_planners_ros)/launch/srscp.rviz"/>
  <node name="DownTheCLiFFPlanner" type="car_planner_ros_node" pkg="ompl_planners_ros" launch-prefix="$(arg launch_prefix)">
    <remap from="goal" to="move_base_simple/goal"/>
  </node>
  
</launch>
